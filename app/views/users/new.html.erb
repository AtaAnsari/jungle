
<header class="page-header">
<div class="well">
<h1>Signup!</h1>
</div>
</header>

<%= form_for :user, url: '/users' do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control field-width' %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control field-width' %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control field-width' %>
  </div>
  <div class="form-group">
    <%= f.label :"password confirmation" %>
    <%= f.password_field :password_confirmation, class: 'form-control field-width' %>
  </div>
  <%= f.submit "Submit", class: 'btn btn-primary' %>

<% end %>



<style>
  .field-width{
    max-width:20%;
  }
</style>
